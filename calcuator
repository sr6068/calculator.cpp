#include <iostream>
using namespace std;

// Driver code
int main() {
  char op;
  float num1, num2;

  // It allows user  to enter the operator
  // i.e. +, -, *, /
  cout << "Enter operator either + or - or / or *:";
  cin >> op;

  // It allows user to enter the operands
  cout << "Enter the numbers :";
  cin >> num1 >> num2;

  // Switch statement begins
  switch (op) {
  // If user enter +
  case '+':
    cout << "The anuswer of the calculation is :";
    cout << num1 + num2;
    break;

  // If user enter -
  case '-':
    cout << "The anuswer of the calculation is :";
    cout << num1 - num2;
    break;

  // If user enter *
  case '*':
    cout << "The anuswer of the calculation is :";
    cout << num1 * num2;
    break;

  // If user enter /
  case '/':
    cout << "The anuswer of the calculation is :";
    cout << num1 / num2;
    break;

  // If the operator is other than +, -, * or /,
  // error message will display
  default:
    cout << "Error! operator is not correct";
  }
  // switch statement ends

  return 0;
}
